package com.kh.practice1.func;

import java.util.Scanner;

public class Test32 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		System.out.print("정수 : ");
		int num = sc.nextInt();

		int ar[] = new int[num];

		if (3 < num && num % 2 == 1) {
			for (int i = 1; i < num / 2 + 2; i++) {

				System.out.print(i + ", ");
			}
			for (int i = num / 2; i > 0; i--) {
				

					System.out.print(i + ", ");
				

					System.out.print(i);
					
				} else {
					System.out.println(" ");
				}

			}
		} else {
			System.out.println("다시 입력하세요.");
		}
	}

}

