package com.kh.practice1.func;

import java.util.Scanner;

public class Test22 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		System.out.print("정수 입력 : ");
		int num = sc.nextInt();
		int z = 0;
		for (int i = num; i >= 1; i--) {
			for (int j = i; j >= 1 ; j--) {
				System.out.print(" ");
			}for(int j = 0; j <= 1 + z * 2; j++ ) {
				 
			System.out.print('*');
				
			}
			System.out.println();
		}
	}
}
