package com.kh.practice1.func;

import java.util.Scanner;

public class Test17 {
	
	public static void main(String [] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("정수입력 : ");
		int num = sc.nextInt();
		
		for(int i = 1; i <= num; i++ ) {
			for(int j = i; j <= num; j++) {
				System.out.print('*');
				
			}
			System.out.println();
		}
		
	}
}
