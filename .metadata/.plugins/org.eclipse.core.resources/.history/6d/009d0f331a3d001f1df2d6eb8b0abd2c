package com.kh.practice1.func;

import java.util.Scanner;

public class Test32 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		System.out.print("정수 : ");
		int num = sc.nextInt();
		int ar[] = new int[num];

		if (num > 3 && num % 2 == 1) {

			for (int i = 0; i <= num; i++) {
				if (i / 2 == num / 2) {
					ar[i] += i;
					System.out.println(i);
				}
			}
		}else {
			System.out.print("다시 입력하세요.");
		}
	}
}
